source 'http://rubygems.org'

gem 'sinatra'
gem 'activerecord', '4.2.5', :require => 'active_record'
gem 'sinatra-activerecord', :require => 'sinatra/activerecord'
gem 'rake'
gem 'require_all'
gem 'sqlite3'
gem 'thin'
gem 'shotgun'
gem 'pry'
gem 'bcrypt' #necessary to use has_secure_password as well as password_digest in database
gem "tux" #Ruby gem that lets you access your database and perform all CRUD
# operations on it through the terminal. It also loads a full environment in 
# the console that allows you to see all routes and views. Primarily, you'll use
# Tux to make sure your database is set up properly, play around with Ruby objects,
# and make sure your ActiveRecord associations are working properly.
gem 'rack-flash3'
gem 'colorize'
