<h1>Edit WOD</h1>

<form action="/wods/<%= @wod.id %>" method="POST">

  <h3><em>Please edit your WOD below</em></h3>

  <label>WOD Title:</label>
    <br></br>
    <input type="text" name="content" id="wod_content" value="<%= @wod.content %>">
    <br></br>
  <label>WOD Duration:</label>
    <br />
    <input type="text" name="duration" id="wod_duration" value="<%= @wod.duration %>">
    <br />
  <label>WOD Level:</label>
    <br></br>
    <input type="text" name="level" id="wod_level" value="<%= @wod.level %>">
    <br></br>
  <label>Details: Exercises, Sets, Reps, etc.</label>
    <br />
    <textarea name="exercise_details" rows="4" cols="50"><%= @wod.exercise_details %></textarea>
    <br></br>
  <label>Comments: Did you hit your goals? Thoughts, Strategies and Tips.</label>
    <br></br>
    <textarea name="comments" rows="4" cols="50"><%= @wod.comments %></textarea>
    <br></br>
  <input type="submit" value="submit">
</form>
